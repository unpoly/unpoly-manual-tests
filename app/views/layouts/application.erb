<!DOCTYPE html>
<html>
  <head>
    <title>Integration test - Unpoly</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= yield(:scripts).presence || javascript_include_tag('application') %>
    <%= csrf_meta_tags %>
    <meta name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1'>
    <%= favicon_link_tag("favicon.png") %>
    <%= yield(:head) %>
  </head>
  <body class="<%= 'has-nav' if @nav %>">
    <%= render @nav if @nav %>

    <div up-main class="container">
      <%= render_flashes %>
      <%= yield %>
    </div>
  </body>
</html>
